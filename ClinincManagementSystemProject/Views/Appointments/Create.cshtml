@model ClinincManagementSystemProject.Models.Appointment


@{
    ViewData["Title"] = "Create";
}

<h3>Doctor Details</h3>
<div class="embed-responsive embed-responsive-4by3">
    <iframe class="embed-responsive-item" src="http://localhost:2177/Doctor/View"></iframe>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <h4>Add Appointment</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientID" class="control-label">Patient Name</label>
                <select asp-for="PatientID" class="form-control" asp-items="ViewBag.PatientID"></select>
            </div>

            <div class="form-group">
                <label asp-for="SpecializationRequired" class="control-label"></label>
                <input asp-for="SpecializationRequired" class="form-control" list="ddlSpecialization" />
                @*@using (Html.BeginForm())
                    {
                        <text>Specialization Required</text>@Html.DropDownList("specilization", new SelectList(ViewBag.Name))
                        <input type="submit" value="Search" />
                    }*@
                <datalist id="ddlSpecialization">
                    <option value="General">General</option>
                    <option value="Gynaecologist">Gynaecologist</option>
                    <option value="Pediatrics">Pediatrics</option>
                    <option value="Orthopedics">Orthopedics</option>
                    <option value="Ophthalmology">Ophthalmology</option>
                </datalist>
                <span asp-validation-for="SpecializationRequired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorID" class="control-label">Doctor Name</label>
                <select asp-for="DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DoctorAvailability" class="control-label"></label>
                <input checked="checked" id="DocAvl" name="DoctorAvailability" type="radio" value="Yes" />Yes

                <input id="DocAvl" name="DoctorAvailability" type="radio" value="No" />No
                <span asp-validation-for="DoctorAvailability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitDate" class="control-label"></label>
                <input asp-for="VisitDate" class="form-control" />
                <span asp-validation-for="VisitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitTime" class="control-label"></label>
                <input asp-for="VisitTime" class="form-control" />
                <span asp-validation-for="VisitTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-dark ml-3" asp-action="Index">Appointment Details</a>
            </div>



        </form>
        <br />
    </div>
</div>





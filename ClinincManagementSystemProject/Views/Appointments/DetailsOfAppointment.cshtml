@model ClinincManagementSystemProject.Models.Appointment

@{
    ViewData["Title"] = "DetailsOfAppointment";
}

<h1>Details Of Appointment</h1>

<div class="alert alert-success" role="alert">
    Your Appointment has been Accepted
</div>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctor.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpecializationRequired)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpecializationRequired)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorAvailability)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorAvailability)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VisitDate)
